<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>plg_system_wf_tooltip</name>
	<author>Widget Factory</author>
	<creationDate>July 2021</creationDate>
	<copyright>Copyright (C) 2021 Ryan Demmer. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@joomlacontenteditor.net</authorEmail>
	<authorUrl>www.joomlacontenteditor.net</authorUrl>
	<version>1.0.0</version>
	<description>Simple Tooltip</description>
	<files folder="plugins/system/wf_tooltip">
		<filename plugin="wf_tooltip">wf_tooltip.php</filename>
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<config>
		 <fields name="params">
            <fieldset name="options" group="options">
				<field name="selector" type="text" default="" hint="" label="PLG_SYSTEM_WF_TOOLTIP_SELECTOR" description="PLG_SYSTEM_WF_TOOLTIP_SELECTOR_DESC" />
				<field name="position" type="list" default="bottom-center" hint="" label="PLG_SYSTEM_WF_TOOLTIP_POSITION" description="PLG_SYSTEM_WF_TOOLTIP_POSITION_DESC">
					<!--option value="top-left">Top Left</option>
                    <option value="top-right">Top Right</option-->
                    <option value="top-center">Top Centre</option>
                    <!--option value="bottom-left">Bottom Left</option>
                    <option value="bottom-right">Bottom Right</option-->
                    <option value="bottom-center">Bottom Centre</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
